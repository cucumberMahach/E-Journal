<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ToDo</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/mytasks" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Мои задачи
            </NavLink>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-task" aria-hidden="true"></span> Список задач
            </NavLink>
            <NavLink class="nav-link" href="/archive" Match="NavLinkMatch.All">
                <span class="oi oi-inbox" aria-hidden="true"></span> Архив
            </NavLink>
            <NavLink class="nav-link" href="/stats" Match="NavLinkMatch.All">
                <span class="oi oi-graph" aria-hidden="true"></span> Результаты
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
